<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a> <!--para que tome el id de la nota--->
                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                </form>
            </div>
        </div>
    </div>
    {{else}}<!--caso contrario que no existan notas en la BD--->
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">There are not notes yet.</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
            </div>
        </div>
    {{/each}}
</div>